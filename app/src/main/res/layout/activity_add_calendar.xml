    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/rv_color"
    tools:context=".Aktivity.AddCalendarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

